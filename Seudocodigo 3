Inicio
  nota, promedio = 0, suma = 0, contador = 1
  
  mientras(contador <= 3)
    //validar que la nota ingresada este entre 1.0 y 7.0
    hacer
      solicitar nota
      leer nota
    mientras(nota < 1.0 o nota > 7.0)
 
    suma = suma + nota
    
    //contador = contador + 1
    contador ++
  fin mientras
  
  promedio = suma / 3
  
  si (promedio < 4.0)
    mostrar mensaje de rendicion de examen
  sino
    si (promedio >= 4.0 y promedio < 5.5)
      mostrar mensaje de solicitud de eximicion
    sino
      mostrar mensaje de eximido
    fin si
  fin si
  
  mostrar promedio
fin 
